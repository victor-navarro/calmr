@article{jeong_mesolimbic_2022,
  title    = {Mesolimbic dopamine release conveys causal associations},
  volume   = {378},
  issn     = {1095-9203},
  doi      = {10.1126/science.abq6740},
  abstract = {Learning to predict rewards based on environmental cues is essential for survival. It is believed that animals learn to predict rewards by updating predictions whenever the outcome deviates from expectations, and that such reward prediction errors (RPEs) are signaled by the mesolimbic dopamine system-a key controller of learning. However, instead of learning prospective predictions from RPEs, animals can infer predictions by learning the retrospective cause of rewards. Hence, whether mesolimbic dopamine instead conveys a causal associative signal that sometimes resembles RPE remains unknown. We developed an algorithm for retrospective causal learning and found that mesolimbic dopamine release conveys causal associations but not RPE, thereby challenging the dominant theory of reward learning. Our results reshape the conceptual and biological framework for associative learning.},
  language = {eng},
  number   = {6626},
  journal  = {Science (New York, N.Y.)},
  author   = {Jeong, Huijeong and Taylor, Annie and Floeder, Joseph R. and Lohmann, Martin and Mihalas, Stefan and Wu, Brenda and Zhou, Mingkang and Burke, Dennis A. and Namboodiri, Vijay Mohan K.},
