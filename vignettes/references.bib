  author     = {Stout, Steven C. and Miller, Ralph R.},
  year       = {2007},
  note       = {Number: 3},
  keywords   = {Learning, *Cues, *Classical Conditioning, *Higher Order Conditioning},
  pages      = {759--783},
  file       = {APA Psycnet Fulltext PDF:/Volumes/GoogleDrive-109072435071403695656/My Drive/Zotero/My Library/files/665/Stout and Miller - 2007 - Sometimes-competing retrieval (SOCR) A formalizat.pdf:application/pdf}
